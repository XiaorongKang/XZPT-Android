<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/rectangle_style"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/feedback_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:hint="请输入遇到的问题或建议..."
                    android:gravity="top"
                    android:background="@null"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:id="@+id/feedback_picture_imageview"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:autofillHints="添加图片"
                        android:src="@drawable/add"
                        />

                    <TextView
                        android:id="@+id/feedback_tips"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="添加选择图片"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_style"
                >

                <EditText
                    android:id="@+id/phone_feedback_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="联系方式（电话/邮箱）：选填，以便于我们联系您"
                    android:gravity="top"
                    android:maxLines="2"
                    android:background="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                >

                <Button
                    android:id="@+id/submit_feedback_area"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style"
                    android:text="提交"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>